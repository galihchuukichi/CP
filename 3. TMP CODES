ll tc,sum,ans[1005];
string s;

void cari(){
    fup(i,1,1000,1){
        if(i&1){
            ans[i] = 1;
        } else 
            ans[i] = -1;
    }
}

void solve(int dep){
    ll n; cin>>n; 
    // iNPUT DONE
    

    
    if(n&1){
        if(n==3) {cout<<"NO\n"; return;}
        ll a,b,kpk; a = (n-1)/2; b = (n-3)/2; a *= -1;
        fup(i,1,n,1){
            if(i&1){
                cout<<b<<" ";
            } else {
                cout<<a<<" ";
            }
            
        }
        
    } else {
        cout<<"YES\n";
        fup(i,1,n,1){
            cout<<ans[i]<<" ";
        }
    }
    cout<<endl;
}

signed main(){
    aku 
    cin >> tc;
    // tc=1;
    cari();
    while(tc--){
        
        solve(0);
    }
}
